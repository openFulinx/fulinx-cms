<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fulinx.spring.data.mysql.dao.mapper.IArticleDao">

    <!--通用查询映射结果-->
    <resultMap id="BaseResultMap" type="com.fulinx.spring.data.mysql.entity.TbArticleEntity">
        <id column="id" property="id"/>
        <result column="is_delete" property="isDelete"/>
        <result column="remark" property="remark"/>
        <result column="record_version" property="recordVersion"/>
        <result column="record_create_name" property="recordCreateName"/>
        <result column="record_update_name" property="recordUpdateName"/>
        <result column="record_create_time" property="recordCreateTime"/>
        <result column="record_update_time" property="recordUpdateTime"/>
    </resultMap>

    <resultMap id="ArticleListResultMap" type="com.fulinx.spring.data.mysql.dao.podo.article.ArticleListResultDo">
        <id column="id" property="id"/>
        <result column="is_delete" property="isDelete"/>
        <result column="remark" property="remark"/>
        <result column="record_version" property="recordVersion"/>
        <result column="record_create_name" property="recordCreateName"/>
        <result column="record_update_name" property="recordUpdateName"/>
        <result column="record_create_time" property="recordCreateTime"/>
        <result column="record_update_time" property="recordUpdateTime"/>
    </resultMap>

    <select id="list" resultMap="ArticleListResultMap">
        SELECT tb_article.*
        FROM
        tb_article
        WHERE
        1 = 1
        <if test="id != null">
            AND tb_article.id = ${id}
        </if>
        <choose>
            <when test="isDelete == null">
                AND tb_article.is_delete = 0
            </when>
            <otherwise>
                AND tb_article.is_delete = #{isDelete}
            </otherwise>
        </choose>
    </select>

    <select id="lockById" resultMap="BaseResultMap">
        SELECT tb_article.*
        FROM tb_article
        WHERE id = #{id}
          AND is_delete = 0 FOR UPDATE
    </select>

    <select id="lockByIds" resultMap="BaseResultMap">
        SELECT
        tb_article.*
        FROM
        tb_article
        WHERE id IN
        <foreach collection="idList" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
        AND is_delete = 0 FOR UPDATE
    </select>

    <select id="listByCategoryId" resultMap="ArticleListResultMap">
        SELECT DISTINCT a.*
        FROM tb_article a
                 LEFT JOIN tb_article_category_relation ac ON a.id = ac.article_id
        WHERE ac.category_id = #{categoryId}
          AND a.status = 1
          AND a.is_delete = 0
          AND ac.is_delete = 0
        ORDER BY a.id desc
        LIMIT 0,7;
    </select>

</mapper>