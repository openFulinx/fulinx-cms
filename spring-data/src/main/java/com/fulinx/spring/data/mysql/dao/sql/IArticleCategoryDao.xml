<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fulinx.spring.data.mysql.dao.mapper.IArticleCategoryDao">

    <!--通用查询映射结果-->
    <resultMap id="BaseResultMap" type="com.fulinx.spring.data.mysql.entity.TbArticleCategoryRelationEntity">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId" />
        <result column="category_id" property="categoryId" />
        <result column="is_delete" property="isDelete"/>
        <result column="remark" property="remark"/>
        <result column="record_version" property="recordVersion"/>
        <result column="record_create_name" property="recordCreateName"/>
        <result column="record_update_name" property="recordUpdateName"/>
        <result column="record_create_time" property="recordCreateTime"/>
        <result column="record_update_time" property="recordUpdateTime"/>
    </resultMap>

    <resultMap id="ListResultMap" type="com.fulinx.spring.data.mysql.dao.podo.article.ArticleCategoryListResultDo">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId" />
        <result column="category_id" property="categoryId" />
        <result column="is_delete" property="isDelete"/>
        <result column="remark" property="remark"/>
        <result column="record_version" property="recordVersion"/>
        <result column="record_create_name" property="recordCreateName"/>
        <result column="record_update_name" property="recordUpdateName"/>
        <result column="record_create_time" property="recordCreateTime"/>
        <result column="record_update_time" property="recordUpdateTime"/>
    </resultMap>

    <select id="list" resultMap="ListResultMap">
        SELECT * FROM tb_article_category
        WHERE
        1 = 1
        <if test="articleId != null">
            AND tb_article_category.article_id = #{articleId}
        </if>
        <if test="categoryId != null">
            AND tb_article_category.category_id = #{categoryId}
        </if>
        <choose>
            <when test="isDelete == null">
                AND tb_article.is_delete = 0
            </when>
            <otherwise>
                AND tb_article.is_delete = #{isDelete}
            </otherwise>
        </choose>
        GROUP BY
        ArticleHierarchy.id
    </select>


    <select id="lockById" resultMap="BaseResultMap">
        SELECT tb_article_category.*
        FROM tb_article_category
        WHERE id = #{id}
          AND is_delete = 0 FOR UPDATE
    </select>

</mapper>