<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fulinx.spring.data.mysql.dao.mapper.ISiteDao">
    <!--通用查询映射结果-->
    <resultMap id="BaseResultMap" type="com.fulinx.spring.data.mysql.entity.TbSiteEntity">
        <result column="theme_id" property="themeId"/>
        <result column="domain" property="domain"/>
        <result column="language_id" property="languageId"/>
        <result column="site_name" property="siteName"/>
        <result column="meta_title" property="metaTitle"/>
        <result column="meta_description" property="metaDescription"/>
        <result column="logo_file_id" property="logoFileId"/>
        <result column="favicon_file_id" property="faviconFileId"/>
        <result column="status" property="status"/>
        <result column="is_delete" property="isDelete"/>
        <result column="remark" property="remark"/>
        <result column="record_version" property="recordVersion"/>
        <result column="record_create_name" property="recordCreateName"/>
        <result column="record_update_name" property="recordUpdateName"/>
        <result column="record_create_time" property="recordCreateTime"/>
        <result column="record_update_time" property="recordUpdateTime"/>
    </resultMap>

    <resultMap id="SiteListResultMap" type="com.fulinx.spring.data.mysql.dao.podo.site.SiteListResultDo">
        <id column="id" property="id"/>
        <result column="theme_id" property="themeId"/>
        <result column="domain" property="domain"/>
        <result column="language_id" property="languageId"/>
        <result column="site_name" property="siteName"/>
        <result column="meta_title" property="metaTitle"/>
        <result column="meta_description" property="metaDescription"/>
        <result column="logo_file_id" property="logoFileId"/>
        <result column="favicon_file_id" property="faviconFileId"/>
        <result column="status" property="status"/>
        <result column="is_delete" property="isDelete"/>
        <result column="remark" property="remark"/>
        <result column="record_version" property="recordVersion"/>
        <result column="record_create_name" property="recordCreateName"/>
        <result column="record_update_name" property="recordUpdateName"/>
        <result column="record_create_time" property="recordCreateTime"/>
        <result column="record_update_time" property="recordUpdateTime"/>
    </resultMap>

    <select id="list" resultMap="SiteListResultMap">
        SELECT tb_site.*
        FROM
        tb_site
        WHERE
        1 = 1
        <if test="id != null">
            AND tb_site.id = ${id}
        </if>
        <if test="siteName != null">
            AND tb_site.site_name LIKE CONCAT(#{siteName}, '%')
        </if>
        <if test="domain != null">
            AND tb_site.domain LIKE CONCAT(#{domain}, '%')
        </if>
        <choose>
            <when test="isDelete == null">
                AND tb_site.is_delete = 0
            </when>
            <otherwise>
                AND tb_site.is_delete = #{isDelete}
            </otherwise>
        </choose>
    </select>

    <select id="lockById" resultMap="BaseResultMap">
        SELECT tb_site.*
        FROM tb_site
        WHERE id = #{id}
          AND is_delete = 0 FOR
        UPDATE
    </select>

    <select id="lockByIds" resultMap="BaseResultMap">
        SELECT
        tb_site.*
        FROM
        tb_site
        WHERE id IN
        <foreach collection="idList" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
        AND is_delete = 0 FOR UPDATE
    </select>
</mapper>