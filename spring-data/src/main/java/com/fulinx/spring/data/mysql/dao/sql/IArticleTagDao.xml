<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fulinx.spring.data.mysql.dao.mapper.IArticleTagDao">
    <!--通用查询映射结果-->
    <resultMap id="BaseResultMap" type="com.fulinx.spring.data.mysql.entity.TbArticleTagEntity">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId" />
        <result column="tag" property="tag" />
        <result column="is_delete" property="isDelete"/>
        <result column="remark" property="remark"/>
        <result column="record_version" property="recordVersion"/>
        <result column="record_create_name" property="recordCreateName"/>
        <result column="record_update_name" property="recordUpdateName"/>
        <result column="record_create_time" property="recordCreateTime"/>
        <result column="record_update_time" property="recordUpdateTime"/>
    </resultMap>

    <resultMap id="ListResultMap" type="com.fulinx.spring.data.mysql.dao.podo.article.ArticleTagListResultDo">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId" />
        <result column="tag" property="tag" />
        <result column="is_delete" property="isDelete"/>
        <result column="remark" property="remark"/>
        <result column="record_version" property="recordVersion"/>
        <result column="record_create_name" property="recordCreateName"/>
        <result column="record_update_name" property="recordUpdateName"/>
        <result column="record_create_time" property="recordCreateTime"/>
        <result column="record_update_time" property="recordUpdateTime"/>
    </resultMap>

    <select id="lockById" resultMap="BaseResultMap">
        SELECT tb_article_tag.*
        FROM tb_article_tag
        WHERE id = #{id}
          AND is_delete = 0 FOR UPDATE
    </select>

    <select id="list" resultMap="ListResultMap">
        SELECT * FROM tb_article_tag
        WHERE
        1 = 1
        <if test="id != null">
            AND tb_article_tag.id = #{id}
        </if>
        <if test="tag != null">
            AND tb_article_tag.tag = #{tag}
        </if>
        <if test="articleId != null">
            AND tb_article_tag.article_id #{articleId}
        </if>
        <choose>
            <when test="isDelete == null">
                AND tb_article_tag.is_delete = 0
            </when>
            <otherwise>
                AND tb_article_tag.is_delete = #{isDelete}
            </otherwise>
        </choose>
    </select>
</mapper>